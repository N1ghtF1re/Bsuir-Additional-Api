<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>BSUIR Additional API</display-name>
    
    <servlet>
        <servlet-name>freeAudsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.freeauds.controller.FreeAudsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>audsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.freeauds.controller.AudsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>freeAudsServlet</servlet-name>
        <url-pattern>/api/v1/audiences/free</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>audsServlet</servlet-name>
        <url-pattern>/api/v1/audiences</url-pattern>
    </servlet-mapping>
</web-app>