<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>BSUIR Additional API</display-name>
    
    <servlet>
        <servlet-name>freeAudsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.auds.FreeAudsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>audsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.auds.AudsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>buildingsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.auds.BuildingsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>newsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.news.NewsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>newsListServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.news.NewsListServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>srcServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.news.SourcesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.auth.AuthServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>currentUserInfoServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.users.CurrentUserInfoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>userInfoServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.users.UserInfoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>currentUserSettingsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.users.CurrentUserSettingsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>recordBookServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.education.RecordBookServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>diplomaInfoServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.education.DiplomaServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>groupInfoServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.servlets.api.v1.education.GroupInfoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>userInfoServlet</servlet-name>
        <url-pattern>/api/v1/users/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>groupInfoServlet</servlet-name>
        <url-pattern>/api/v1/user/group</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>recordBookServlet</servlet-name>
        <url-pattern>/api/v1/user/record-book</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>diplomaInfoServlet</servlet-name>
        <url-pattern>/api/v1/user/record-book/diploma</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>currentUserSettingsServlet</servlet-name>
        <url-pattern>/api/v1/user/settings</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>currentUserInfoServlet</servlet-name>
        <url-pattern>/api/v1/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/api/v1/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>freeAudsServlet</servlet-name>
        <url-pattern>/api/v1/auditoriums/free</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>audsServlet</servlet-name>
        <url-pattern>/api/v1/auditoriums</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buildingsServlet</servlet-name>
        <url-pattern>/api/v1/buildings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newsServlet</servlet-name>
        <url-pattern>/api/v1/news</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newsListServlet</servlet-name>
        <url-pattern>/api/v1/newsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srcServlet</servlet-name>
        <url-pattern>/api/v1/sources</url-pattern>
    </servlet-mapping>

    <!-- FILTERS -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>men.brakh.bsuirapi.servlets.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>