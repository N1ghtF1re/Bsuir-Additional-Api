<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>BSUIR Additional API</display-name>
    
    <servlet>
        <servlet-name>freeAudsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.FreeAudsServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>audsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.AudsServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>buildingsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.BuildingsServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>newsServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.NewsServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>newsListServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.NewsListServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>srcServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.SourcesServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>men.brakh.bsuirapi.controller.AuthServletWithErrorHandling</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/api/v1/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>freeAudsServlet</servlet-name>
        <url-pattern>/api/v1/auditoriums/free</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>audsServlet</servlet-name>
        <url-pattern>/api/v1/auditoriums</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buildingsServlet</servlet-name>
        <url-pattern>/api/v1/buildings</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newsServlet</servlet-name>
        <url-pattern>/api/v1/news</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newsListServlet</servlet-name>
        <url-pattern>/api/v1/newsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>srcServlet</servlet-name>
        <url-pattern>/api/v1/sources</url-pattern>
    </servlet-mapping>


</web-app>